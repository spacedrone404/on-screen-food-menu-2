style.
  p.top-ver {
    background-color: rgba(0, 0, 0, 0.88); 
    padding: 5px; 
    color: red; 
    text-align: right; 
    padding-right: 80px;
    animation: top-ver-emerge 1s ease-in-out;
  }
  @keyframes top-ver-emerge {
    0% {
      opacity: 0;
      filter: blur(10px);
      transform: translateX(-130%);
    }

    100% {
      opacity: 1;
      filter: blur(0);
      transform: translateX(0);
    }
  }



